<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TABlet"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    x:Name="Colors">
    
    <Color x:Key="BackGroundColor">#FF181818</Color>
    <Color x:Key="BackGroundColorLight">#FF393939</Color>
    <Color x:Key="BorderColor">#FF9c1aff</Color>
    <Color x:Key="ForeGroundColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="BackGroundBrush" Color="{DynamicResource BackGroundColor}"/>
    <SolidColorBrush x:Key="BackGroundBrushLight" Color="{DynamicResource BackGroundColorLight}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>
    <SolidColorBrush x:Key="ForeBrush" Color="{DynamicResource ForeGroundColor}"/>

    <sys:Double x:Key="FadedOpacity">.235</sys:Double>

    <SolidColorBrush x:Key="FadedBGBrush" Color="{DynamicResource BorderColor}" Opacity="{DynamicResource FadedOpacity}"/>
    <SolidColorBrush x:Key="FadedBGBrushRed" Color="Red" Opacity="{DynamicResource FadedOpacity}"/>

    <!--<SolidColorBrush x:Key="BorderBrushFaded" Color="{StaticResource BorderColor}" Opacity="{StaticResource FadedOpacity}"/>-->

</ResourceDictionary>